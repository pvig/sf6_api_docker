{% extends 'base.html.twig' %}

{% block body %}
<div id="app">
    <v-app v-cloak>

        <v-navigation-drawer clipped floating temporary app v-model="drawer" v-if="this.$store.getters.isLoggedIn">
            <v-list two-line>
                <v-list-item
                v-for="(item, index) in items"
                :key="index"
                :to="item.path"
                @click="item.action"
                >
                <v-list-item-content>
                    <v-list-item-title v-html="item.title"></v-list-item-title>
                </v-list-item-content>
                </v-list-item>
            </v-list>
        </v-navigation-drawer>


        <v-app-bar color="blue-grey" dark fixed  v-if="this.$store.getters.isLoggedIn">
            <v-app-bar-nav-icon @click="drawer = !drawer;"></v-app-bar-nav-icon>
            <v-app-bar-title class="title"><div>My symfony app</div></v-app-bar-title>
        </v-app-bar>


        <v-main>
            <v-container fluid>
                <router-view></router-view>
            </v-container>
        </v-main>
    </v-app>
</div>
{% endblock %}